<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SEP3-Tier1</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="">
                <span class="oi oi-spreadsheet" aria-hidden="true"></span> Sales List
            </NavLink>
        </li>
        <AuthorizeView Policy="Customer">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="CreateSale">
                    <span class="oi oi-plus" aria-hidden="true"></span> Create Sale
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="Admin">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="AdminstratorPage">
                    <span class="oi oi-person" aria-hidden="true"></span> Adminstrator page
                </NavLink>
            </li>
        </AuthorizeView>
        <AuthorizeView Policy="Moderator">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="ModeratorPage">
                    <span class="oi oi-person" aria-hidden="true"></span> ModeratorPage
                </NavLink>
            </li>
        </AuthorizeView>

        <AuthorizeView>
            <NotAuthorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="CreateCustomer">
                        <span class="oi oi-plus" aria-hidden="true"></span> Signup
                    </NavLink>
                </li>
            </NotAuthorized>
        </AuthorizeView>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="ProfilePage">
                <span class="oi oi-person" aria-hidden="true"></span> Profile page
            </NavLink>
        </li>
        <AuthorizeView>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="Cart">
                    <span class="oi oi-cart" aria-hidden="true"></span> Cart
                </NavLink>
            </li>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}